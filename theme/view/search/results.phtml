                                                <li><a href="<?= $brand['brand_link'] ?>"><?= $brand['brand_name'] ?></a></li>
                                            <? } ?>
                                        </ul>
                                    <? } ?>
                                </div>
                            <? } ?>
                        </div>
                    </div>
                </div>
            <? } ?>
